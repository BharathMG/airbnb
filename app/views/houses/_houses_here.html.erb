<% if @house_count > 0 %>
    <%= @house_count %> houses found
    <table border="1" cellpadding="5">
        <% @house.each do |house| %>
            <tr>
                <td><%= house.desc %></td>
                <td><%= house.city %></td>
                <td><%= house.rent %></td>
                <td><%= house.r_type%> people max</td>
                <td><%= link_to :Click, house %></td>
            </tr>
        <% end %>
        <% else %>
        No houses are available
<% end %>